<h3>Companies</h3>

<%= link_to "Create New Company", new_company_path, class: 'link new_link' %>

<% @companies.each do |company| %>
  <ul>
    <li>
      <%= link_to company.name, company_path(company), class: "link title_link" %>
      <%= link_to "Edit", edit_company_path(company), class: "link edit_link" %>
      <%= link_to "Delete", company_path(company), method: "delete", class: "link delete_link" %>
    </li>
  </ul>
<% end %>
