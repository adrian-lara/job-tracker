<h3>Categories</h3>

<%= link_to "Create New Category", new_category_path, class: 'link new_link' %>

<% @categories.each do |category| %>
  <ul>
    <li>
      <%= link_to category.title, category_path(category), class: "link title_link" %>
      <%= link_to "Edit", edit_category_path(category), class: "link edit_link" %>
      <%= link_to "Delete", category_path(category), method: :delete, class: "link delete_link" %>
    </li>
  </ul>
<% end %>
