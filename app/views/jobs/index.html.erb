<h3>Jobs at <%= @company.name %></h3>

<% @jobs.each do |job| %>
  <ul>
    <li>
      <%= link_to job.title, company_job_path(@company, job), class: "link title_link" %>
      <%= link_to "Edit", edit_company_job_path(@company, job), class: "link edit_link" %>
      <%= link_to "Delete", company_job_path(@company, job), method: :delete, method: :delete, class: "link delete_link" %>
    </li>
  </ul>

<% end %>

<div class = "right-section">
  <h3>Contacts at <%= @company.name %></h3>
  <%= render partial: 'contacts/form' %>
  <%= render partial: 'contacts/index' %>
</div>
